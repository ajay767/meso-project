extends ../tab-base

block content
    .main__container
        .app__home__test   
            .doctors__list        
                each val, index in doctorData
                    +peopleCard(doctorData[index])
            .doctor-profile-container
                .doctor__profile
                    .doctor__profile--bg
                        img(src="src/img/mirzapur.jpg", alt="")
                    .doctor__profile--card
                        .doctor__profile--card-dp
                            img(src="src/img/bablu.jpg", alt="")
                        h3.card__heading Dr Bablu pandit
                            svg#verified
                                use(xlink:href="src/img/icon-pack-2.svg#checked")
                        p.card__caption Dentist 
                        p.card__caption MBBS | MD , Apollo Hospitals
                .appointment__section
                    h2.card__caption Consultant Fee Rs. 599
                    button.button__text Book Now
                .doctor__details 
                    h1.block__heading Details
                    ul
                        li.block__caption Lorem ipsum dolor sit.
                        li.block__caption Lorem ipsum dolor sit, amet consectetur adipisicing elit.
                        li.block__caption Lorem ipsum dolor sit amet, consectetur adipisicing elit. A, ex!
                .rating__section
                    h2.block__heading Reviews
                    //- h4.block__content.rating__section__overall overall 4.8
                    //-     svg
                    //-         use(xlink:href="src/img/icon-pack-2.svg#star")
                    each val, index in ratingData
                        +ratingCard(ratingData[index])
            