header.navigation
    .navigation__logo Meso
    form.navigation__searchbar
        input(type="text", placeholder="search").navigation__searchbar--input
        a(href="#").navigation__searchbar--input-link
            img(src="src/img/search.svg", alt="search icon").navigation__searchbar--input-link-btn
    .navigation__link

        svg.navigation__link--user-profile.navigation__link--user-icon
            use(xlink:href="src/img/icon-pack-2.svg#user")

        svg.navigation__link--user-notification.navigation__link--user-icon
            use(xlink:href="src/img/icon-pack-2.svg#notification")

        svg.navigation__link--item.navigation__link--user-icon
            use(xlink:href="src/img/icon-pack-2.svg#menu-3")
        
    .alert__box.alert__warning
        svg.warning
            use(xlink:href="src/img/icon-pack-2.svg#danger")
